<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |b| %>
        <tr>
            <td><%= b.title %></td>
            <td><%= b.body %></td>
            <td><%= link_to "Show", book_path(b.id), class:"show#{b.id}" %></td>
            <td><%= link_to "Edit", edit_book_path(b.id), class:"edit#{b.id}" %></td>
            <td><%= link_to "Destroy", book_path(b.id), method: :delete, data: {confirm: "Are you sure?" }, class:"destroy#{b.id}" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
    <% if @book.errors.any? %>
    <%= @book.errors.count %>error
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
    <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Create Book' %>
<% end %>

